



<div class="col-md-4 col-md-offset-2">
<div class="text-center">


<%=link_to"Add Meal type",new_meal_type_path,class: "btn btn-info btn-md"%>
</div>

<%@meal_types.each do |meal_type|%>
<div class="col-md-12">
<div class="panel panel-default"> 
<ol>
<li><%=meal_type.meal_type_name%></li>
</ol>
<div class="text-center">
  <td><%= link_to 'Show', meal_type,class: "btn btn-default"%></td>
   <td><%= link_to 'Edit', edit_meal_type_path(meal_type),class: "btn btn-default"%></td>
   <td><%= link_to 'Destroy', meal_type, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-default"%></td>
 </div>
 </div>
 </div>
<%end%>
</div>




