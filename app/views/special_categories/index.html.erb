      
<div class="col-md-4 col-md-offset-2">
<div class="text-center">


<%=link_to"Add New special category",new_special_category_path,class: "btn btn-info btn-md"%>
</div>


<%@special_categories.each do |special_category|%>
<div class="col-md-12">
<div class="panel panel-default"> 
<ol>
<li><%= special_category.special_category_name%></li>
<li><%= special_category.special_category_description%></li></ol>
<div class="text-center">
  <td><%= link_to 'Show', special_category,class: "btn btn-default" %></td>
   <td><%= link_to 'Edit', edit_special_category_path(special_category),class: "btn btn-default" %></td>
   <td><%= link_to 'Destroy', special_category, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-default" %></td>
</div>
</div>
</div>
<%end%>
</div>







