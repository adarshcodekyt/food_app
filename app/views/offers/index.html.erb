

<div class="col-md-4 col-md-offset-2">
<div class="text-center">

<%=link_to"Add New Offer",new_offer_path,class: "btn btn-info btn-md"%>

</div>
</br>
<%@offers.each do |offer|%>
<div class="col-md-12">
<div class="panel panel-default"> 
<ol>
<li><%=offer.offer_name%></li>
<li><%=offer.offer_description%></li>
<li><%=offer.coupon_code%></li>
<li><%=offer.validate_form%></li>
<li><%=offer.validate_till%></li>
</ol>
<div class="text-center">
  <td><%= link_to 'Show', offer,class: "btn btn-default"%></td>
   <td><%= link_to 'Edit', edit_offer_path(offer),class: "btn btn-default"%></td>
   <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-default"%></td>
</div>
</div>
</div>
<%end%>
</div>











