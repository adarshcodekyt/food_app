
<div class="col-md-4">   
<%= bootstrap_form_for @menu_item do |f|%>
<%= f.text_field :item_name%>
<%= f.text_field :item_price%>
<%= f.text_field :image_id%>
<%= f.text_field :special_category_id%>
<%= f.text_field :spicy_level%>
<%= f.text_field :offer_id%>
<%= f.text_field :item_description%>
<%= f.text_field :item_ingredients%>
<%= f.radio_button :item_active,"In stock"%>
<%= f.radio_button :item_active,"Out of stock"%>
<%= f.text_field :preparation_time%>
<%= f.text_field :meal_type_id%>
<%= f.submit%>
<%end%>
</div>
